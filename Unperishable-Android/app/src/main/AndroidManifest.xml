<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bmcarr.unperishable" >
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/screen_title"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bmcarr.unperishable.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DrawerLayoutFragment"
            android:label="@string/title_activity_login__fragment" >
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="16"
        android:targetSdkVersion="19"
        android:maxSdkVersion="19"/>

</manifest>
